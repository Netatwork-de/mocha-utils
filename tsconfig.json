{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "lib": [
      "ESNext",
      "dom"
    ],
    "declaration": true,
    "declarationDir": "./dist/types",
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "./custom-types"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "stripInternal": true
  }
}